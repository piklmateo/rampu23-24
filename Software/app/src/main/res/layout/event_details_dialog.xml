<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgEventImgDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_event_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_medium"
        android:textColor="@color/color_text_800"
        android:text="Event name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEventImgDetails" />

    <EditText
        android:id="@+id/et_event_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/color_text_800"
        android:ems="10"
        android:inputType="text"
        android:text="Event name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_name_details" />

    <TextView
        android:id="@+id/tv_event_date_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_medium"
        android:textColor="@color/color_text_800"
        android:text="Event date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_event_name_details" />

    <EditText
        android:id="@+id/et_event_date_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/color_text_800"
        android:ems="10"
        android:inputType="text"
        android:text="Event date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_date_details" />

    <TextView
        android:id="@+id/tv_event_time_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_medium"
        android:textColor="@color/color_text_800"
        android:text="Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_event_date_details" />

    <EditText
        android:id="@+id/et_event_time_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/color_text_800"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_time_details" />

    <TextView
        android:id="@+id/tv_event_location_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/worksans_medium"
        android:text="Event location"
        android:textColor="@color/color_text_800"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_event_time_details" />

    <EditText
        android:id="@+id/et_event_location_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/color_text_800"
        android:ems="10"
        android:inputType="text"
        android:text="Event location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_location_details" />

    <TextView
        android:id="@+id/tv_event_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_medium"
        android:textColor="@color/color_text_800"
        android:text="Event description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_event_location_details" />

    <EditText
        android:id="@+id/et_event_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/color_text_800"
        android:ems="10"
        android:inputType="text"
        android:text="Event location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_description_details" />

    <TextView
        android:id="@+id/tv_event_type_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/worksans_medium"
        android:textColor="@color/color_text_800"
        android:text="Event type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_event_description_details" />

    <Spinner
        android:id="@+id/spn_event_type_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_type_details" />


</androidx.constraintlayout.widget.ConstraintLayout>