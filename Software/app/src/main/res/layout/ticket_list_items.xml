<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:elevation="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_ticket_event_name"
                    android:textColor="@color/color_text_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/worksans_bold"
                    tools:text="Name of event" />

                <TextView
                    android:id="@+id/tv_ticket_event_date"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_text_700"
                    android:fontFamily="@font/worksans_medium"
                    android:layout_height="wrap_content"
                    tools:text="28.1.2023." />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_text_700"
                    android:fontFamily="@font/worksans_medium"
                    android:layout_height="wrap_content"
                    tools:text="Price: 10" />

                <TextView
                    android:id="@+id/tv_ticket_category"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/color_text_700"
                    android:fontFamily="@font/worksans_bold"
                    android:layout_height="wrap_content"
                    tools:text="VIP" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/qr_imageView"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:contentDescription="QR-Code"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:src="@drawable/event"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
